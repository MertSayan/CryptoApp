@{
    ViewData["Title"] = "RSA Anahtar Üret";
}

<!-- particles.js -->
<script src="https://cdn.jsdelivr.net/npm/tsparticles@2.11.1/tsparticles.bundle.min.js"></script>
<div id="particles-js" style="position: fixed; width: 100%; height: 100%; z-index: -1;"></div>

<!-- toastr -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<style>
    body {
        background: linear-gradient(135deg, #1f1c2c, #928dab);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #f4f4f4;
        overflow-x: hidden;
    }

    .page-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: bold;
        margin-top: 60px;
        margin-bottom: 20px;
        color: #ffdd80;
        text-shadow: 0 0 15px rgba(255, 200, 100, 0.6), 0 0 30px rgba(255, 180, 50, 0.5);
        animation: flicker 2s infinite, glowTitle 3s ease-in-out infinite alternate;
        letter-spacing: 2px;
        position: relative;
    }

    .key-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 40px 20px 80px;
        position: relative;
        z-index: 1;
    }

    .key-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 30px 25px;
        width: 700px;
        border: 2px solid rgba(255, 255, 255, 0.15);
        box-shadow: 0 0 12px rgba(255, 200, 120, 0.3);
        color: #ffffff;
        position: relative;
        overflow: hidden;
        margin-bottom: 30px;
        text-align: center;
    }

        .key-card h2 {
            font-size: 1.5rem;
            color: #ffdd80;
            margin-bottom: 18px;
            text-align: center;
        }

        .key-card button {
            background: #ffdd80;
            color: #1f1c2c;
            border: none;
            border-radius: 8px;
            padding: 10px 24px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.2s;
            margin-bottom: 18px;
        }

            .key-card button:hover {
                background: #ffcc70;
            }

    .result-wrapper {
        position: relative;
        margin-bottom: 30px;
    }

    .result-area {
        background: rgba(255,255,255,0.08);
        border-radius: 8px;
        padding: 12px 16px;
        color: #ffdd80;
        font-size: 0.95rem;
        word-break: break-word;
        text-align: left;
        max-height: 220px;
        overflow-y: auto;
        border: 1px solid rgba(255,255,255,0.1);
    }

    .copy-btn {
        position: absolute;
        top: 8px;
        right: 8px;
        background: #ffcc70;
        border: none;
        padding: 6px 10px;
        font-size: 0.8rem;
        border-radius: 6px;
        cursor: pointer;
        color: #1f1c2c;
        font-weight: bold;
    }

        .copy-btn:hover {
            background: #ffdd80;
        }

    .key-label {
        font-weight: bold;
        color: #ffdd80;
        margin-bottom: 8px;
        display: block;
        text-align: left;
    }

    .wave {
        position: absolute;
        bottom: 0;
        width: 100%;
        z-index: 0;
    }

    @@keyframes glowTitle {
        from

    {
        text-shadow: 0 0 10px rgba(255,255,255,0.3);
    }

    to {
        text-shadow: 0 0 25px rgba(255,255,255,0.7);
    }

    }

    @@keyframes flicker {
        0%, 19%, 21%, 23%, 25%, 54%, 56%, 100%

    {
        opacity: 1;
    }

    20%, 22%, 24%, 55% {
        opacity: 0.4;
    }

    }
</style>

<div class="page-title">🔐 RSA Anahtar Üretici</div>

<div class="key-container">
    <div class="key-card">
        <h2>RSA Anahtar Çifti Oluştur</h2>
        <form method="post" asp-action="Generate">
            <button type="submit">Anahtar Çifti Oluştur</button>
        </form>

        @if (ViewBag.PublicKey != null)
        {
            <div class="result-wrapper">
                <span class="key-label">🔓 Public Key:</span>
                <button class="copy-btn" onclick="copyToClipboard('publicKey')">Kopyala</button>
                <div class="result-area" id="publicKey">@ViewBag.PublicKey</div>
            </div>

            <div class="result-wrapper">
                <span class="key-label">🔒 Private Key:</span>
                <button class="copy-btn" onclick="copyToClipboard('privateKey')">Kopyala</button>
                <div class="result-area" id="privateKey">@ViewBag.PrivateKey</div>
            </div>
        }
    </div>
</div>

<!-- Dalga SVG -->
<div class="wave">
    <svg viewBox="0 0 1440 320">
        <path fill="#1f1c2c" fill-opacity="1" d="M0,160L60,154.7C120,149,240,139,360,154.7C480,171,600,213,720,213.3C840,213,960,171,1080,165.3C1200,160,1320,192,1380,208L1440,224L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"></path>
    </svg>
</div>

<!-- particles config -->
<script>
    tsParticles.load("particles-js", {
        fullScreen: { enable: false },
        particles: {
            number: { value: 60 },
            size: { value: 3 },
            color: { value: "#ffffff" },
            links: { enable: true, color: "#ffffff", opacity: 0.3 },
            move: { enable: true, speed: 1 }
        },
        background: { color: "transparent" }
    });

    function copyToClipboard(elementId) {
        const text = document.getElementById(elementId).innerText;
        navigator.clipboard.writeText(text).then(() => {
            toastr.success("Kopyalandı!", "Başarılı");
        }).catch(() => {
            toastr.error("Kopyalanamadı!", "Hata");
        });
    }
</script>
