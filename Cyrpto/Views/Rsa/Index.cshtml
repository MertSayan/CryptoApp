@{
    ViewData["Title"] = "RSA Şifreleme";
}

<!-- particles.js -->
<script src="https://cdn.jsdelivr.net/npm/tsparticles@2.11.1/tsparticles.bundle.min.js"></script>
<div id="particles-js" style="position: fixed; width: 100%; height: 100%; z-index: -1;"></div>

<style>
    body {
        background: linear-gradient(135deg, #1f1c2c, #928dab);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #f4f4f4;
        overflow-x: hidden;
    }

    .page-title {
        text-align: center;
        font-size: 3.5rem;
        font-weight: bold;
        margin-top: 60px;
        margin-bottom: 20px;
        color: #ffdd80;
        text-shadow: 0 0 15px rgba(255, 200, 100, 0.6), 0 0 30px rgba(255, 180, 50, 0.5);
        animation: flicker 2s infinite, glowTitle 3s ease-in-out infinite alternate;
        letter-spacing: 2px;
        position: relative;
    }

        .page-title::after {
            content: "";
            display: block;
            height: 4px;
            width: 200px;
            margin: 12px auto 0;
            background: linear-gradient(90deg, #ffdd80, #ffcc40);
            border-radius: 5px;
            box-shadow: 0 0 15px #ffcc40;
        }

    .rsa-options {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 40px;
        padding: 40px 20px 80px;
        position: relative;
        z-index: 1;
    }

    .option-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 30px 25px;
        width: 320px;
        text-align: center;
        border: 2px solid rgba(255, 255, 255, 0.15);
        box-shadow: 0 0 12px rgba(255, 200, 120, 0.3);
        transition: all 0.3s ease;
        text-decoration: none;
        color: #ffffff;
        position: relative;
        overflow: hidden;
    }

        .option-card:hover {
            transform: scale(1.06);
            box-shadow: 0 0 25px rgba(255, 255, 150, 0.6);
            border-color: #ffcc70;
        }

            .option-card:hover .option-icon {
                animation: glowIcon 1s infinite alternate;
            }

    .option-icon {
        font-size: 4rem;
        margin-bottom: 20px;
        color: #ffdd80;
        text-shadow: 0 0 10px rgba(255, 220, 150, 0.6);
    }

    .option-title {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 12px;
        letter-spacing: 1px;
    }

    .option-description {
        font-size: 1rem;
        opacity: 0.85;
        line-height: 1.5;
        margin-bottom: 18px;
    }

    .option-btn {
        background: #ffdd80;
        color: #1f1c2c;
        border: none;
        border-radius: 8px;
        padding: 10px 24px;
        font-size: 1rem;
        font-weight: bold;
        cursor: pointer;
        transition: transform 0.2s, background 0.2s;
        text-decoration: none;
        display: inline-block;
    }

        .option-btn:hover {
            background: #ffcc70;
            transform: translateY(-3px);
        }

    .wave {
        position: absolute;
        bottom: 0;
        width: 100%;
        z-index: 0;
    }

    @@keyframes glowTitle {
        from

    {
        text-shadow: 0 0 10px rgba(255,255,255,0.3);
    }

    to {
        text-shadow: 0 0 25px rgba(255,255,255,0.7);
    }

    }

    @@keyframes flicker {
        0%, 19%, 21%, 23%, 25%, 54%, 56%, 100%

    {
        opacity: 1;
    }

    20%, 22%, 24%, 55% {
        opacity: 0.4;
    }

    }

    @@keyframes glowIcon {
        0%

    {
        text-shadow: 0 0 10px #ffdd80;
    }

    100% {
        text-shadow: 0 0 20px #ffcc40;
    }

    }
</style>

<div class="page-title">🔑 RSA Şifreleme Aracı</div>

<div class="rsa-options">
    <a href="/Key/Index" class="option-card">
        <div class="option-icon">🔐</div>
        <div class="option-title">Anahtar Üret</div>
        <div class="option-description">
            RSA anahtar çifti oluştur ve güvenliğini başlat.
        </div>
    </a>

    <a href="/RsaSifrele/Index" class="option-card">
        <div class="option-icon">🔒</div>
        <div class="option-title">Şifrele</div>
        <div class="option-description">
            Metin veya verini public key ile şifrele.
        </div>
    </a>

    <a href="/RsaCoz/Index" class="option-card">
        <div class="option-icon">🔓</div>
        <div class="option-title">Çöz</div>
        <div class="option-description">
            Şifreli veriyi private key ile çöz.
        </div>
    </a>
</div>


<!-- Dalga SVG -->
<div class="wave">
    <svg viewBox="0 0 1440 320">
        <path fill="#1f1c2c" fill-opacity="1" d="M0,160L60,154.7C120,149,240,139,360,154.7C480,171,600,213,720,213.3C840,213,960,171,1080,165.3C1200,160,1320,192,1380,208L1440,224L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"></path>
    </svg>
</div>

<!-- particles config -->
<script>
    tsParticles.load("particles-js", {
        fullScreen: { enable: false },
        particles: {
            number: { value: 60 },
            size: { value: 3 },
            color: { value: "#ffffff" },
            links: { enable: true, color: "#ffffff", opacity: 0.3 },
            move: { enable: true, speed: 1 }
        },
        background: { color: "transparent" }
    });
</script>
